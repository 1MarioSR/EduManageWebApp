@* @model List<EduManage.Web.Models.Entities.Student> *@
    @model StudentsViewModel

@{
    ViewData["Title"] = "Student List";

     
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">All Students</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-secondary">All Students</h4>
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AllStudents != null && Model.AllStudents.Any()) 
                {
                    @foreach (var student in Model.AllStudents)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Lastname</td>
                            <td>@student.Gender</td>
                            <td>@student.Email</td>
                            <td>
                                @if (student.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@student.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.Id">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No students found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card shadow-sm mt-5">
    <div class="card-body">
        <h4 class="text-secondary">Active Students</h4>
        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ActiveStudents != null && Model.ActiveStudents.Any()) 
                {
                    @foreach (var student in Model.ActiveStudents)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Lastname</td>
                            <td>@student.Gender</td>
                            <td>@student.Email</td>
                            <td>
                                <span class="badge bg-success">Active</span>
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@student.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.Id">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No active students found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
