@* @model List<EduManage.Web.Models.Entities.Student> *@
    @model EnrollmentsViewModel

@{
    ViewData["Title"] = "Enrollment List";

    // var infoOnlyActive = ViewBag.StudentInformation as List<EduManage.Web.Models.Entities.Student> ;
}


<p>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="text-center">
        <h2 class="mb-4">Enrollment List</h2>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Enrollment Date</th>
                    <th>Grade</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-light text-center">
                    <td colspan="5"><strong>All Enrollments</strong></td>
                </tr>
                @foreach (var enrollment in Model.AllEnrollments)
                {
                    <tr class="text-center">
                        <td>@enrollment.Id</td>
                        <td>@enrollment.Name</td>
                        <td>@enrollment.Enrollment_date.ToShortDateString()</td>
                        <td>@enrollment.Grade</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@enrollment.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-info btn-sm ms-1" asp-action="Details" asp-route-id="@enrollment.Id">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a class="btn btn-danger btn-sm ms-1" asp-action="Delete" asp-route-id="@enrollment.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
